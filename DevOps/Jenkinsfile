pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'test'
        DOCKER_TAG = "${env.BUILD_NUMBER}"
        GITHUB_REPO_URL = 'https://github.com/RazSherf/Stocker'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'jenkins', url: "${GITHUB_REPO_URL}"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}", "-f backend/Dockerfile backend")
                }
            }
        }

        stage('Run Docker Image') {
            steps {
                script {
                    sh """
                        docker stop test-container || true
                        docker rm test-container || true
                        docker run -d --name test-container -p 8081:8080 ${DOCKER_IMAGE}:${DOCKER_TAG}
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully! Docker container is running.'
        }
        failure {
            echo 'Pipeline failed. Check the logs for details.'
        }
    }
}